<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#ffffff"
    android:orientation="vertical">

    <TextView
        android:id="@+id/share_title"
        android:layout_width="match_parent"
        android:layout_height="40dip"
        android:gravity="center"
        android:text="分享到"
        android:textSize="13sp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="10dp">

        <TextView
            android:id="@+id/tv_share_qq"
            android:layout_width="70dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="5dp"
            android:layout_marginRight="5dp"
            android:layout_weight="1"
            android:drawablePadding="5dp"
            android:drawableTop="@mipmap/image_qq"
            android:gravity="center"
            android:text="QQ"
            android:textSize="13sp" />

        <TextView
            android:id="@+id/tv_share_qqzone"
            android:layout_width="70dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="5dp"
            android:layout_marginRight="5dp"
            android:layout_weight="1"
            android:drawablePadding="5dp"
            android:drawableTop="@mipmap/image_qqzone"
            android:gravity="center"
            android:text="QQ空间"
            android:textSize="13sp" />


        <TextView
            android:id="@+id/tv_share_wechat"
            android:layout_width="70dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="5dp"
            android:layout_marginRight="5dp"
            android:layout_weight="1"
            android:drawablePadding="5dp"
            android:drawableTop="@mipmap/image_wechat"
            android:gravity="center"
            android:text="微信"
            android:textSize="13sp" />

        <TextView
            android:id="@+id/tv_share_moment"
            android:layout_width="70dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="5dp"
            android:layout_marginRight="5dp"
            android:layout_weight="1"
            android:drawablePadding="5dp"
            android:drawableTop="@mipmap/image_momment"
            android:gravity="center"
            android:text="朋友圈"
            android:textSize="13sp" />


    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="0.1dip"
        android:background="#f0f0f0" />

    <TextView
        android:id="@+id/tv_cancel"
        android:layout_width="match_parent"
        android:layout_height="40dip"
        android:gravity="center"
        android:text="取消"
        android:textSize="13sp" />

</LinearLayout>
